{
    "compilerOptions": {
      /* Basic Options */
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "noEmit": false,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
  
      /* Strict Type-Checking Options */
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "useUnknownInCatchVariables": true,
      "alwaysStrict": true,

      /* Module Resolution Options */
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@utils/*": ["utils/*"],
        "@models/*": ["models/*"],
        "@controllers/*": ["controllers/*"],
        "@middlewares/*": ["middlewares/*"]
      },
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "preserveSymlinks": true,
  
      /* Advanced Options */
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": false
    },
    "include": [
      "src/**/*",
      "src/**/*.json",
      "types/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "coverage",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/__tests__/**"
    ],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
      "transpileOnly": true,
      "compilerOptions": {
        "module": "ESNext"
      }
    }
  }